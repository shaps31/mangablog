{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1 class="mb-3">Dashboard</h1>

    {# Cartes de compteurs #}
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Articles</div>
                    <div class="display-6">{{ counts.posts }}</div>
                    <a href="{{ path('app_post_index') }}" class="small">Gérer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Catégories</div>
                    <div class="display-6">{{ counts.categories }}</div>
                    <a href="{{ path('app_category_index') }}" class="small">Gérer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Tags</div>
                    <div class="display-6">{{ counts.tags }}</div>
                    <a href="{{ path('app_tag_index') }}" class="small">Gérer</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <div class="text-muted small">Commentaires</div>
                    <div class="display-6">{{ counts.comments }}</div>
                    <a href="{{ path('app_comment_index') }}" class="small">Gérer</a>
                </div>
            </div>
        </div>
    </div>

    {# Tableaux : derniers articles / commentaires en attente #}
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card mb-3">
                <div class="card-header fw-bold">Derniers articles publiés</div>
                <div class="card-body p-0">
                    {% if latestPosts is empty %}
                        <p class="m-3 text-muted">Aucun article publié encore.</p>
                    {% else %}
                        <table class="table table-sm mb-0 align-middle">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Catégorie</th>
                                <th>Publié le</th>
                                <th class="text-end">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for p in latestPosts %}
                                <tr>
                                    <td>{{ p.title }}</td>
                                    <td>{{ p.category ? p.category.name : '—' }}</td>
                                    <td>{{ p.publishedAt ? p.publishedAt|date('Y-m-d H:i') : '—' }}</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary" href="{{ path('blog_show', {slug: p.slug}) }}">Voir</a>
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_post_edit', {id: p.id}) }}">Éditer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-3">
                <div class="card-header fw-bold">Commentaires en attente</div>
                <div class="card-body p-0">
                    {% if pendingComments is empty %}
                        <p class="m-3 text-muted">Aucun commentaire à modérer.</p>
                    {% else %}
                        <ul class="list-group list-group-flush">
                            {% for c in pendingComments %}
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="me-2">
                                        <div class="fw-semibold">{{ c.author.userIdentifier }}</div>
                                        <div class="small text-muted">
                                            {{ c.createdAt|date('Y-m-d H:i') }} —
                                            sur <a href="{{ path('app_post_edit', {id: c.post.id}) }}">{{ c.post.title }}</a>
                                        </div>
                                        <div class="small" style="white-space: pre-line">{{ c.content|u.truncate(140, '…') }}</div>
                                    </div>
                                    <div class="text-nowrap ms-2">
                                        <a class="btn btn-sm btn-success" href="{{ path('app_comment_toggle', {id: c.id}) }}">Approuver</a>
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_comment_show', {id: c.id}) }}">Voir</a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Graphiques #}
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header fw-bold">Articles publiés par mois ({{ "now"|date("Y") }})</div>
                <div class="card-body">
                    <canvas id="postsByMonth"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header fw-bold">Top tags</div>
                <div class="card-body">
                    <canvas id="topTags"></canvas>
                </div>
            </div>
        </div>
    </div>

    {# Top catégories #}
    <div class="card">
        <div class="card-header fw-bold">Top catégories (par articles publiés)</div>
        <div class="card-body">
            {% if topCategories is empty %}
                <p class="text-muted m-0">Pas encore de données.</p>
            {% else %}
                {% for row in topCategories %}
                    <span class="badge text-bg-dark me-1 mb-1">
            {{ row.name }} : {{ row.total }}
          </span>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="alert alert-secondary mt-3">
        <strong>{{ publishedThisMonth }}</strong> article(s) publié(s) ce mois-ci.
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    {# Chart.js #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1"></script>
    <script>
        // Données injectées par le contrôleur
        const perMonth = {{ perMonth|json_encode|raw }};
        const topTags  = {{ topTags|json_encode|raw }};

        // 1) Line chart — posts par mois
        const ctxMonth = document.getElementById('postsByMonth');
        if (ctxMonth) {
            new Chart(ctxMonth, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Fév', 'Mars', 'Avr', 'Mai', 'Juin', 'Juil', 'Août', 'Sept', 'Oct', 'Nov', 'Déc'],
                    datasets: [{
                        data: Object.values(perMonth),
                        borderWidth: 2,
                        fill: false,
                        tension: 0.3
                    }]
                },
                options: {
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, ticks: { precision: 0 } } }
                }
            });
        }

        // 2) Bar chart — top tags
        const ctxTags = document.getElementById('topTags');
        if (ctxTags) {
            const tagLabels = topTags.map(t => t.name);
            const tagCounts = topTags.map(t => t.c);

            new Chart(ctxTags, {
                type: 'bar',
                data: {
                    labels: tagLabels,
                    datasets: [{ data: tagCounts }]
                },
                options: {
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, ticks: { precision: 0 } } }
                }
            });
        }
    </script>
{% endblock %}
