{% extends 'base.html.twig' %}
{% block title %}Category index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 m-0">Category index</h1>
        <a class="btn btn-sm btn-primary" href="{{ path('app_category_new') }}">+ Nouvelle catégorie</a>
    </div>

    <table class="table table-sm align-middle">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th class="text-end">actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td class="text-end">
                    <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="4" class="text-muted">Aucune catégorie pour le moment.</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
