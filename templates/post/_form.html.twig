{# Tom Select â€” recherche distante + crÃ©ation Ã  la volÃ©e #}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const el = document.getElementById('post_tags')
            || document.querySelector('select[name="post[tags][]"]');
        if (!el || el.tomselect) return;

        const ts = new TomSelect(el, {
            plugins: ['remove_button'],
            valueField: 'id',    // ce que renvoie l'API
            labelField: 'name',  // ce qu'on affiche
            searchField: 'name',
            persist: false,
            // ðŸ”Ž Recherche distante (AJAX)
            load: function (query, callback) {
                if (!query.length) return callback();
                fetch('{{ path("admin_tag_search") }}?q=' + encodeURIComponent(query))
                    .then(r => r.json())
                    .then(callback)
                    .catch(() => callback());
            },
            // âž• Autoriser la crÃ©ation Ã  la volÃ©e
            create: true, // taper "mecha" + EntrÃ©e => crÃ©e une option temporaire
            createFilter: (input) => input.trim().length >= 2
        });

        // Quand on ajoute un â€œnouveauâ€ tag (crÃ©Ã© via create:true),
        // on lâ€™enregistre cÃ´tÃ© serveur, puis on remplace la valeur temporaire par l'id rÃ©el.
        ts.on('item_add', function (value, item) {
            // Si value n'est pas un nombre â†’ c'est probablement un â€œnouveauâ€ tag
            if (isNaN(Number(value))) {
                fetch('{{ path("admin_tag_create") }}', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ name: value })
                })
                    .then(r => r.json())
                    .then(tag => {
                        if (!tag || !tag.id) return;
                        // Remplacer lâ€™option temporaire par le tag rÃ©el
                        ts.updateOption(value, { id: tag.id, name: tag.name });
                        ts.addItem(tag.id, true);   // sÃ©lectionner la vraie valeur
                        ts.removeItem(value);       // retirer lâ€™ancienne
                    })
                    .catch(() => {});
            }
        });
    });
</script>

{# AperÃ§u dynamique de la cover (montre/masque selon lâ€™URL) #}
<script>
    (function () {
        const input = document.getElementById('post_cover');
        const img   = document.getElementById('coverPreview');
        if (!input || !img) return;

        const isHttpUrl = (u) => /^https?:\/\/.+/i.test(u);

        function update() {
            const url = (input.value || '').trim();
            if (isHttpUrl(url)) {
                img.src = url;
                img.classList.remove('d-none');
            } else {
                img.classList.add('d-none');
                img.removeAttribute('src');
            }
        }

        input.addEventListener('input', update);
        input.addEventListener('change', update);
        update(); // initial (utile en Ã©dition)
    })();
</script>
