{# templates/post/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Articles{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Articles</h1>
        <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-sm">Nouvel article</a>
    </div>
    <p class="text-muted small mb-2">
        {{ total }} article(s) — page {{ page }}/{{ pages }}
    </p>

    <div class="table-responsive bg-white border rounded">
        <table class="table align-middle m-0">
            <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Catégorie</th>
                <th>Statut</th>
                <th>Publié le</th>
                <th>Note</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                {% set st = post.status|default('draft') %}
                <tr>
                    <td class="text-nowrap">{{ post.id }}</td>
                    <td class="text-truncate" style="max-width: 260px;">
                        {{ post.title }}
                    </td>
                    <td class="text-muted small">{{ post.slug }}</td>
                    <td class="text-nowrap">
                        {{ post.category ? post.category.name : '—' }}
                    </td>
                    <td>
                        {% if st == 'published' %}
                            <span class="badge text-bg-success">publié</span>
                        {% elseif st == 'draft' %}
                            <span class="badge text-bg-secondary">brouillon</span>
                        {% else %}
                            <span class="badge text-bg-warning text-dark">{{ st }}</span>
                        {% endif %}
                    </td>
                    <td class="text-nowrap">
                        {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '—' }}
                    </td>
                    <td class="text-nowrap">
                        {{ post.rating is not null ? post.rating : '—' }}
                    </td>

                    <td class="text-end text-nowrap">
                        <a class="btn btn-sm btn-outline-secondary"
                           href="{{ path('app_post_show', {id: post.id}) }}">Voir</a>
                        <a class="btn btn-sm btn-primary"
                           href="{{ path('app_post_edit', {id: post.id}) }}">Éditer</a>
                        {{ include('post/_delete_form.html.twig', { post: post }) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center text-muted py-4">Aucun article trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if pages > 1 %}
            <nav aria-label="Pagination" class="mt-3">
                <ul class="pagination">
                    {% if page > 1 %}
                        <li class="page-item">
                            <a class="page-link" rel="prev"
                               href="{{ path('app_post_index', app.request.query.all|merge({'page': page-1})) }}">
                                Précédent
                            </a>
                        </li>
                    {% endif %}

                    {% for p in 1..pages %}
                        <li class="page-item {{ p == page ? 'active' }}">
                            <a class="page-link"
                               href="{{ path('app_post_index', app.request.query.all|merge({'page': p})) }}">{{ p }}</a>
                        </li>
                    {% endfor %}

                    {% if page < pages %}
                        <li class="page-item">
                            <a class="page-link" rel="next"
                               href="{{ path('app_post_index', app.request.query.all|merge({'page': page+1})) }}">
                                Suivant
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}

    </div>
{% endblock %}
