{% extends 'base.html.twig' %}
{% block title %}Blog{% endblock %}

{% block body %}
    <div class="bg-white p-3 border rounded mb-3">
        {# Formulaire GET : recherche + filtres #}
        <form method="get" class="row g-2 mb-3">
            <div class="col">
                <input class="form-control"
                       type="text"
                       name="q"
                       placeholder="Rechercher un articleâ€¦"
                       value="{{ q|default('') }}">
            </div>

            {# Indicateur et bouton reset si filtres actifs #}
            {% set hasFilters = (q|default('')|length > 0) or (catId|default(0) != 0) or (tag|default(0) != 0) %}
            <div class="d-flex align-items-center justify-content-between mb-2">
                <p class="small text-muted m-0">
                    {{ totalResults|default(0) }} rÃ©sultat{{ totalResults|default(0) > 1 ? 's' : '' }}
                    {% if q %} pour Â« {{ q }} Â»{% endif %}
                </p>
                {% if hasFilters %}
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('blog_index') }}">
                        RÃ©initialiser
                    </a>
                {% endif %}
            </div>

            <div class="col-3">
                <select class="form-select" name="category">
                    <option value="0">Toutes catÃ©gories</option>
                    {% for c in categories %}
                        <option value="{{ c.id }}" {{ (catId|default(0) == c.id) ? 'selected' }}>
                            {{ c.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-3">
                <select class="form-select" name="tag">
                    <option value="0">Tous les tags</option>
                    {% for t in allTags %}
                        <option value="{{ t.id }}" {{ (tag|default(0) == t.id) ? 'selected' }}>
                            {{ t.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-auto">
                <button class="btn btn-primary">Filtrer</button>
            </div>
        </form>
    </div>

    {# Bandeau de stats du mois #}
    <div class="alert alert-secondary d-flex justify-content-between">
        <div>
            Ce mois-ci :
            <strong>{{ totalMonth }}</strong>
            article{{ totalMonth>1?'s':'' }} publiÃ©{{ totalMonth>1?'s':'' }}.
        </div>

        <div class="d-flex gap-2 flex-wrap">
            {% for row in totalsByCat %}
                <span class="badge text-bg-dark">
          {{ row.category ?? 'Sans catÃ©gorie' }} : {{ row.total }}
        </span>
            {% endfor %}

            {% if tag|default(0) %}
                <span class="badge text-bg-secondary ms-2">
          tag : {{ (allTags|filter(t => t.id == tag)|first).name }}
        </span>
            {% endif %}
        </div>
    </div>

    {# Liste des articles #}
    <div class="row row-cols-1 g-3">
        {% for post in posts %}
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="h5 card-title mb-1">
                            <a href="{{ path('blog_show', { slug: post.slug }) }}">{{ post.title }}</a>
                        </h2>

                        {# âœ… Cover avec fallback local #}
                        {% set coverUrl = post.cover ?: asset('img/cover-placeholder.png') %}
                        <img src="{{ coverUrl }}" class="img-thumbnail me-3" style="max-height:120px" alt="Cover">

                        <div class="text-muted small mb-2">
                            {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : 'â€”' }} â€¢ {{ post.category.name }}
                        </div>

                        {# ðŸ”— Tags cliquables : filtrent par tag et reviennent en page 1 #}
                        {% if post.tags|length %}
                            <div class="mt-1">
                                {% set activeTagId = tag|default(null) %}
                                {% for t in post.tags %}
                                    <a
                                        class="badge text-decoration-none me-1 {{ t.id == activeTagId ? 'bg-primary' : 'bg-secondary' }}"
                                        href="{{ path('blog_index', app.request.query.all|merge({'tag': t.id, 'page': 1})) }}">
                                        {{ t.name }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if app.request.get('tag') %}
                            <a class="btn btn-sm btn-outline-secondary ms-1"
                               href="{{ path('blog_index', app.request.query.all|merge({'tag': null, 'page': 1})) }}">
                                RÃ©initialiser les tags
                            </a>
                        {% endif %}

                        {# Si twig/string-extra absent : utiliser slice/length #}
                        <p class="card-text mb-2">{{ post.content|u.truncate(180, 'â€¦') }}</p>

                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('blog_show', { slug: post.slug }) }}">Lire</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# Pagination (prÃ©serve tous les filtres via app.request.query.all) #}
    {% if pages|default(1) > 1 %}
        <nav class="mt-3">
            <ul class="pagination">
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page-1})) }}">
                            PrÃ©cÃ©dent
                        </a>
                    </li>
                {% endif %}

                {% for p in 1..pages %}
                    <li class="page-item {{ p == page ? 'active' }}">
                        <a class="page-link"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': p})) }}">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if page < pages %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page+1})) }}">
                            Suivant
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
