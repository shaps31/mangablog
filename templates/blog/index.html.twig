{% extends 'base.html.twig' %}
{% block title %}Blog{% endblock %}

{% block body %}
    <div class="bg-white p-3 border rounded mb-3">
        {# Formulaire GET : recherche + filtre cat√©gorie + filtre tag #}
        <form method="get" class="row g-2 mb-3">
            <div class="col">
                <input class="form-control"
                       type="text"
                       name="q"
                       placeholder="Rechercher un article‚Ä¶"
                       value="{{ q|default('') }}">
            </div>

            <div class="col-3">
                {# ‚ö† On compare avec catId (fourni par le contr√¥leur) #}
                <select class="form-select" name="category">
                    <option value="0">Toutes cat√©gories</option>
                    {% for c in categories %}
                        <option value="{{ c.id }}" {{ (catId|default(0) == c.id) ? 'selected' }}>
                            {{ c.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-3">
                <select class="form-select" name="tag">
                    <option value="0">Tous les tags</option>
                    {% for t in allTags %}
                        <option value="{{ t.id }}" {{ (tag|default(0) == t.id) ? 'selected' }}>
                            {{ t.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-auto">
                <button class="btn btn-primary">Filtrer</button>
            </div>
        </form>
    </div>

    {# Bandeau de stats du mois #}
    <div class="alert alert-secondary d-flex justify-content-between">
        <div>
            Ce mois-ci :
            <strong>{{ totalMonth }}</strong>
            article{{ totalMonth>1?'s':'' }} publi√©{{ totalMonth>1?'s':'' }}.
        </div>

        <div class="d-flex gap-2 flex-wrap">
            {# Pastilles de stats par cat√©gorie #}
            {% for row in totalsByCat %}
                <span class="badge text-bg-dark">
          {{ row.category ?? 'Sans cat√©gorie' }} : {{ row.total }}
        </span>
            {% endfor %}

            {# Pastille du tag actif si filtre utilis√© #}
            {% if tag|default(0) %}
                <span class="badge text-bg-secondary ms-2">
          tag : {{ (allTags|filter(t => t.id == tag)|first).name }}
        </span>
            {% endif %}
        </div>
    </div>

    {# Liste des articles #}
    <div class="row row-cols-1 g-3">
        {% for post in posts %}
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="h5 card-title mb-1">
                            <a href="{{ path('blog_show', { slug: post.slug }) }}">{{ post.title }}</a>
                        </h2>

                        {% if post.cover %}
                            <img src="{{ post.cover }}" class="img-thumbnail me-3" style="max-height:120px" alt="Cover">
                        {% endif %}

                        <div class="text-muted small mb-2">
                            {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '‚Äî' }} ‚Ä¢ {{ post.category.name }}
                        </div>

                        {# üîó Tags cliquables : relancent la recherche filtr√©e par tag #}
                        {% if post.tags|length %}
                            <div class="mt-1">
                                {% set activeTagId = tag|default(null) %}


                                {% for t in post.tags %}
                                    <a
                                        class="badge text-decoration-none me-1 {{ t.id == activeTagId ? 'bg-primary' : 'bg-secondary' }}"
                                        href="{{ path('blog_index', app.request.query.all|merge({'tag': t.id, 'page': 1})) }}"
                                    >
                                        {{ t.name }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if app.request.get('tag') %}
                            <a class="btn btn-sm btn-outline-secondary ms-1"
                               href="{{ path('blog_index', app.request.query.all|merge({'tag': null, 'page': 1})) }}">
                                R√©initialiser les tags
                            </a>
                        {% endif %}


                        {# Si tu n'as pas twig/string-extra, remplace |u.truncate par slice #}
                        <p class="card-text mb-2">{{ post.content|u.truncate(180, '‚Ä¶') }}</p>

                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('blog_show', { slug: post.slug }) }}">Lire</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# Pagination (si plus d‚Äôune page) #}
    {% if pages|default(1) > 1 %}
        <nav class="mt-3">
            <ul class="pagination">
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page-1})) }}">
                            Pr√©c√©dent
                        </a>
                    </li>
                {% endif %}

                {% for p in 1..pages %}
                    <li class="page-item {{ p == page ? 'active' }}">
                        <a class="page-link"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': p})) }}">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if page < pages %}
                    <li class="page-item">
                        <a class="page-link"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page+1})) }}">
                            Suivant
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
