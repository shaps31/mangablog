{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Blog{% endblock %}

{% block body %}
    {# Fil d‚ÄôAriane #}
    {% include '_partials/_breadcrumb.html.twig' with {
        items: [
            { label: 'Accueil', url: path('app_home') },
            { label: 'Blog' }
        ]
    } %}

    {# Variables s√©curis√©es depuis l‚ÄôURL si non pass√©es par le contr√¥leur #}
    {% set q     = q|default(app.request.get('q')|default('')) %}
    {% set catId = catId|default(app.request.get('category')|default(0)) %}
    {% set tag   = tag|default(app.request.get('tag')|default(0)) %}

    {# Valeurs par d√©faut robustes #}
    {% set posts = posts|default([]) %}
    {% set page  = page|default(1) %}
    {% set pages = pages|default(1) %}

    <div class="bg-white p-3 border rounded mb-3">
        {# Formulaire GET : recherche + filtres #}
        <form method="get" class="row g-2 mb-3">
            <div class="col">
                <input class="form-control"
                       type="text"
                       name="q"
                       placeholder="Rechercher un article‚Ä¶"
                       value="{{ q }}">
            </div>

            {# Indicateur et bouton reset si filtres actifs #}
            {% set hasFilters = (q|length > 0) or (catId != 0) or (tag != 0) %}
            <div class="d-flex align-items-center justify-content-between mb-2">
                <p class="small text-muted m-0">
                    {{ totalResults|default(posts|length) }} r√©sultat{{ (totalResults|default(posts|length)) > 1 ? 's' : '' }}
                    {% if q %} pour ¬´ {{ q }} ¬ª{% endif %}
                </p>
                {% if hasFilters %}
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('blog_index') }}">
                        R√©initialiser
                    </a>
                {% endif %}
            </div>

            <div class="col-3">
                <select class="form-select" name="category">
                    <option value="0">Toutes cat√©gories</option>
                    {% for c in categories|default([]) %}
                        <option value="{{ c.id }}" {{ (catId == c.id) ? 'selected' }}>
                            {{ c.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-3">
                <select class="form-select" name="tag">
                    <option value="0">Tous les tags</option>
                    {% for t in allTags|default([]) %}
                        <option value="{{ t.id }}" {{ (tag == t.id) ? 'selected' }}>
                            {{ t.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-auto">
                <button class="btn btn-primary">Filtrer</button>
            </div>
        </form>
    </div>

    {# Bandeau de stats du mois #}
    <div class="alert alert-secondary d-flex justify-content-between">
        <div>
            Ce mois-ci :
            <strong>{{ totalMonth|default(0) }}</strong>
            article{{ totalMonth|default(0) > 1 ? 's' : '' }} publi√©{{ totalMonth|default(0) > 1 ? 's' : '' }}.
        </div>

        <div class="d-flex gap-2 flex-wrap">
            {% for row in totalsByCat|default([]) %}
                <span class="badge text-bg-dark">
                    {{ row.category ?? 'Sans cat√©gorie' }} : {{ row.total }}
                </span>
            {% endfor %}

            {% if tag %}
                <span class="badge text-bg-secondary ms-2">
                    tag : {{ (allTags|default([])|filter(t => t.id == tag)|first).name }}
                </span>
            {% endif %}
        </div>
    </div>

    {# En tendance (int√©gr√© DANS le block body) #}
    {% set trending = trending|default([]) %}
    {% if trending|length %}
        <div class="card shadow-sm h-100 reveal" data-animate="up">
            <div class="card-header fw-bold">En tendance</div>
            <ul class="list-group list-group-flush">
                {% for p in trending %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('blog_show', {slug: p.slug}) }}" class="text-decoration-none">
                            {{ p.title }}
                        </a>
                        <span class="badge text-bg-secondary">
                            {{ p.comments|filter(c => c.status == 'approved')|length }}
                        </span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {# Id du tag actif (entier) ‚Äî unique #}
    {% set activeTagId = tag is not empty ? (tag + 0) : null %}

    {# Liste des articles #}
    <div class="row row-cols-1 g-3">
        {% for post in posts %}
            <div class="col">
                <div class="card shadow-sm h-100 reveal" data-animate="up">
                    <div class="card-body">
                        <h2 class="h5 card-title mb-1">
                            <a href="{{ path('blog_show', { slug: post.slug }) }}">{{ post.title }}</a>
                        </h2>

                        {# ‚è± Estimation ~200 mots/minute #}
                        {% set words = post.content|striptags|replace({'&nbsp;':' '})|split(' ')|length %}
                        {% set minutes = (words / 200)|round(0, 'ceil') %}
                        <span class="text-muted small d-inline-block mb-2">‚è± {{ minutes }} min de lecture</span>

                        {# ‚úÖ Cover avec fallback, alt, lazy #}
                        {% set coverUrl = post.cover ?: asset('img/cover-placeholder.png') %}
                        <img src="{{ coverUrl }}"
                             class="img-thumbnail me-3"
                             style="max-height:120px"
                             alt="Couverture : {{ post.title }}"
                             loading="lazy">

                        <div class="text-muted small mb-2">
                            {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '‚Äî' }} ‚Ä¢ {{ post.category.name }}
                        </div>

                        {# üéØ Cat√©gorie cliquable #}
                        {% if post.category %}
                            <div class="mb-1">
                                <a class="badge text-bg-primary me-1"
                                   href="{{ path('blog_index', app.request.query.all|merge({'category': post.category.id, 'page': 1})) }}">
                                    {{ post.category.name }}
                                </a>
                            </div>
                        {% endif %}

                        {# ‚úÖ Tags cliquables (surbrillance du tag actif) #}
                        {% if post.tags|length %}
                            <div class="mt-1">
                                {% for t in post.tags %}
                                    <a class="badge text-decoration-none me-1 {{ t.id == activeTagId ? 'bg-primary' : 'bg-secondary' }}"
                                       href="{{ path('blog_index', app.request.query.all|merge({'tag': t.id, 'page': 1})) }}">
                                        {{ t.name }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if app.request.get('tag') %}
                            <a class="btn btn-sm btn-outline-secondary ms-1"
                               href="{{ path('blog_index', app.request.query.all|merge({'tag': null, 'page': 1})) }}">
                                R√©initialiser les tags
                            </a>
                        {% endif %}

                        {# Extrait propre (HTML nettoy√©) #}
                        <p class="mb-2">
                            {{ post.content|striptags|u.truncate(220, '‚Ä¶') }}
                        </p>

                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('blog_show', { slug: post.slug }) }}">Lire</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <p class="text-muted">Aucun article trouv√©.</p>
            </div>
        {% endfor %}
    </div>

    {# Compteur affich√© #}
    <p class="text-muted small mb-2">
        {{ posts|length }} article(s) affich√©(s) ‚Äî page {{ page }}/{{ pages }}
    </p>

    {# Pagination (pr√©serve tous les filtres via app.request.query.all) #}
    {% if pages > 1 %}
        <nav class="mt-3" aria-label="Pagination">
            <ul class="pagination">
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link" rel="prev"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page-1})) }}">
                            Pr√©c√©dent
                        </a>
                    </li>
                {% endif %}

                {% for p in 1..pages %}
                    <li class="page-item {{ p == page ? 'active' }}">
                        <a class="page-link"
                           {% if p == page %}aria-current="page"{% endif %}
                           href="{{ path('blog_index', app.request.query.all|merge({'page': p})) }}">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if page < pages %}
                    <li class="page-item">
                        <a class="page-link" rel="next"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page+1})) }}">
                            Suivant
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}
