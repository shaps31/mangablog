{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{# Totaux de r√©actions (hot) ‚Äî toujours d√©fini #}
{% set rxTotals = rxTotals|default({}) %}

{% block meta %}
    {{ parent() }}

    {# Valeurs s√ªres m√™me si le contr√¥leur ne fournit pas page/pages/q #}
    {% set curPage  = page  | default(app.request.get('page')  | default(1)) %}
    {% set maxPages = pages | default(1) %}
    {% set qval     = q     | default(app.request.get('q')     | default('')) %}

    {# Canonical : retirer page=1 #}
    {% set query = app.request.query.all | merge({'page': curPage > 1 ? curPage : null}) %}
    <link rel="canonical" href="{{ url('blog_index', query) }}">

    {# Prev/Next pour pagination #}
    {% if curPage > 1 %}
        <link rel="prev" href="{{ url('blog_index', app.request.query.all | merge({'page': curPage - 1})) }}">
    {% endif %}
    {% if curPage < maxPages %}
        <link rel="next" href="{{ url('blog_index', app.request.query.all | merge({'page': curPage + 1})) }}">
    {% endif %}

    {# Meta description contextualis√©e (si recherche) #}
    {% if qval %}
        <meta name="description"
              content="R√©sultats pour ¬´ {{ qval }} ¬ª ‚Äî page {{ curPage }} sur {{ maxPages }} sur KamiManga.">
    {% endif %}
{% endblock %}

{% block title %}Blog{% endblock %}

{% block body %}
    {# Fil d‚ÄôAriane #}
    {% include '_partials/_breadcrumb.html.twig' with {
        items: [
            { label: 'Accueil', url: path('app_home') },
            { label: 'Blog' }
        ]
    } %}

    {# Variables depuis l‚ÄôURL si non pass√©es par le contr√¥leur #}
    {% set q     = q|default(app.request.get('q')|default('')) %}
    {% set catId = catId|default(app.request.get('category')|default(0)) %}
    {% set tag   = tag|default(app.request.get('tag')|default(0)) %}

    {# Valeurs par d√©faut robustes #}
    {% set posts = posts|default([]) %}
    {% set page  = page|default(1) %}
    {% set pages = pages|default(1) %}

    <div class="bg-white p-3 border rounded mb-3">
        {# Formulaire GET : recherche + filtres #}
        <form method="get" class="row g-2 align-items-end">
            <div class="col-12 col-lg">
                <label for="q" class="form-label visually-hidden">Recherche</label>
                <input id="q" class="form-control" type="text" name="q"
                       placeholder="Rechercher un article‚Ä¶" value="{{ q }}">
            </div>

            <div class="col-12 col-sm-6 col-lg-3">
                <label for="f-cat" class="form-label visually-hidden">Cat√©gorie</label>
                <select id="f-cat" class="form-select" name="category">
                    <option value="0">Toutes cat√©gories</option>
                    {% for c in categories|default([]) %}
                        <option value="{{ c.id }}" {{ (catId == c.id) ? 'selected' }}>
                            {{ c.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 col-sm-6 col-lg-3">
                <label for="f-tag" class="form-label visually-hidden">Tag</label>
                <select id="f-tag" class="form-select" name="tag">
                    <option value="0">Tous les tags</option>
                    {% for t in allTags|default([]) %}
                        <option value="{{ t.id }}" {{ (tag == t.id) ? 'selected' }}>
                            {{ t.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-auto">
                <button class="btn btn-primary">Filtrer</button>
            </div>
        </form>

        <div class="d-flex gap-2 mb-2">
            <a class="btn btn-sm {{ app.request.get('sort') != 'hot' ? 'btn-primary' : 'btn-outline-secondary' }}"
               href="{{ path('blog_index', app.request.query.all|merge({'sort': null, 'page':1})) }}">
                R√©cents
            </a>
            <a class="btn btn-sm {{ app.request.get('sort') == 'hot' ? 'btn-primary' : 'btn-outline-secondary' }}"
               href="{{ path('blog_index', app.request.query.all|merge({'sort': 'hot', 'page':1})) }}">
                Tendance üî•
            </a>
        </div>

        {# Indicateur + reset si filtres actifs #}
        {% set hasFilters = (q|length > 0) or (catId != 0) or (tag != 0) %}
        <div class="d-flex align-items-center justify-content-between mt-2">
            <p class="small text-muted m-0">
                {{ totalResults|default(posts|length) }}
                r√©sultat{{ (totalResults|default(posts|length)) > 1 ? 's' : '' }}
                {% if q %} pour ¬´ {{ q }} ¬ª{% endif %}
            </p>
            {% if hasFilters %}
                <a class="btn btn-sm btn-outline-secondary" href="{{ path('blog_index') }}">
                    R√©initialiser
                </a>
            {% endif %}
        </div>
    </div>

    {# Bandeau de stats du mois #}
    <div class="alert alert-secondary d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            Ce mois-ci :
            <strong>{{ totalMonth|default(0) }}</strong>
            article{{ totalMonth|default(0) > 1 ? 's' : '' }} publi√©{{ totalMonth|default(0) > 1 ? 's' : '' }}.
        </div>

        <div class="d-flex gap-2 flex-wrap">
            {% for row in totalsByCat|default([]) %}
                <span class="badge badge-cat">
          {{ row.category ?? 'Sans cat√©gorie' }} : {{ row.total }}
        </span>
            {% endfor %}

            {% if tag %}
                <span class="badge badge-tag ms-1">
          #{{ (allTags|default([])|filter(t => t.id == tag)|first).name }}
        </span>
            {% endif %}
        </div>
    </div>

    {# En tendance #}
    {% set trending = trending|default([]) %}
    {% if trending|length %}
        <div class="card shadow-sm mb-3 reveal" data-animate="up">
            <div class="card-header fw-bold">En tendance</div>
            <ul class="list-group list-group-flush">
                {% for p in trending %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('blog_show', {slug: p.slug}) }}" class="text-decoration-none">
                            {{ p.title }}
                        </a>
                        <span class="badge text-bg-secondary">
              {{ p.comments|filter(c => c.status == 'approved')|length }}
            </span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {# Id du tag actif (entier) ‚Äî unique #}
    {% set activeTagId = tag is not empty ? (tag + 0) : null %}

    {# Liste des articles #}
    <div class="row row-cols-1 g-3">
        {% for post in posts %}
            <div class="col">
                <article class="card shadow-sm h-100 reveal" data-animate="up">
                    <div class="card-body">
                        {# Titre #}
                        <h2 class="h5 card-title mb-1">
                            <a href="{{ path('blog_show', { slug: post.slug }) }}">{{ post.title }}</a>
                        </h2>

                        {# m√©ta : date + temps de lecture + hot #}
                        {% set words   = post.content|striptags|replace({'&nbsp;':' '})|split(' ')|length %}
                        {% set minutes = (words / 200)|round(0, 'ceil') %}
                        <div class="text-muted small mb-2">
              <span aria-label="Publi√© le">
                {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '‚Äî' }}
              </span>
                            ¬∑ <span aria-label="Temps de lecture">‚è± {{ minutes }} min</span>
                            ¬∑ <span aria-label="Tendance">üî• {{ rxTotals[post.id]|default(0) }}</span>
                        </div>

                        {# Watchlist #}
                        {% if app.user %}
                            <button class="btn btn-sm btn-outline-success add-to-list"
                                    data-url="{{ path('watchlist_toggle', {id: post.id}) }}"
                                    data-token="{{ csrf_token('watchlist' ~ post.id) }}">
                                {{ inListIds is defined and post.id in inListIds ? 'Dans ma liste ‚úì' : 'Ajouter √† ma liste' }}
                            </button>
                        {% endif %}

                        {# Cover #}
                        {% set coverUrl = post.cover ?: asset('img/cover-placeholder.png') %}
                        <div class="position-relative">
                            <img src="{{ coverUrl }}"
                                 class="img-cover mb-2"
                                 alt="Cover : {{ post.title }}" loading="lazy" decoding="async">

                            {% set hot = rxTotals[post.id]|default(0) %}
                            {% if hot > 0 %}
                                <span class="hot-badge"
                                      data-bs-toggle="tooltip"
                                      title="R√©actions des 30 derniers jours">üî• {{ hot }}</span>
                            {% endif %}
                        </div>

                        {# Cat√©gorie #}
                        {% if post.category %}
                            <div class="mb-2">
                                <a class="badge badge-cat me-1"
                                   href="{{ path('blog_index', app.request.query.all|merge({'category': post.category.id, 'page': 1})) }}">
                                    {{ post.category.name }}
                                </a>
                            </div>
                        {% endif %}

                        {# Tags #}
                        {% if post.tags|length %}
                            <div class="mb-2">
                                {% for t in post.tags %}
                                    <a class="badge badge-tag me-1 {{ t.id == activeTagId ? 'active' }}"
                                       href="{{ path('blog_index', app.request.query.all|merge({'tag': t.id, 'page': 1})) }}">
                                        {{ t.name }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if app.request.get('tag') %}
                            <a class="btn btn-sm btn-outline-secondary mb-2"
                               href="{{ path('blog_index', app.request.query.all|merge({'tag': null, 'page': 1})) }}">
                                R√©initialiser les tags
                            </a>
                        {% endif %}

                        {# Extrait #}
                        <p class="mb-3">
                            {{ post.content|striptags|u.truncate(220, '‚Ä¶') }}
                        </p>

                        <a class="btn btn-read"
                           href="{{ path('blog_show', { slug: post.slug }) }}"
                           aria-label="Lire l‚Äôarticle {{ post.title }}">
                            Lire
                        </a>
                    </div>
                </article>
            </div>
        {% else %}
            <div class="col">
                <p class="text-muted">Aucun article trouv√©.</p>
            </div>
        {% endfor %}
    </div>

    {# Compteur affich√© #}
    <p class="text-muted small mb-2">
        {{ posts|length }} article(s) affich√©(s) ‚Äî page {{ page }}/{{ pages }}
    </p>

    {# Pagination (pr√©serve tous les filtres via app.request.query.all) #}
    {% if pages > 1 %}
        <nav class="mt-3" aria-label="Pagination">
            <ul class="pagination">
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link" rel="prev"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page-1})) }}">
                            Pr√©c√©dent
                        </a>
                    </li>
                {% endif %}

                {% for p in 1..pages %}
                    <li class="page-item {{ p == page ? 'active' }}">
                        <a class="page-link"
                           {% if p == page %}aria-current="page"{% endif %}
                           href="{{ path('blog_index', app.request.query.all|merge({'page': p})) }}">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if page < pages %}
                    <li class="page-item">
                        <a class="page-link" rel="next"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page+1})) }}">
                            Suivant
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script>
        // Tooltips (hot)
        document.querySelectorAll('[data-bs-toggle="tooltip"]')
            .forEach(el => new bootstrap.Tooltip(el));
    </script>

    <script>
        // Toggle watchlist
        document.addEventListener('click', async (e) => {
            const b = e.target.closest('.add-to-list'); if (!b) return;
            try {
                const r = await fetch(b.dataset.url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'fetch',
                        'X-CSRF-TOKEN': b.dataset.token
                    },
                    body: '{}'
                });
                if (!r.ok) return;
                const j = await r.json(); // { ok:true, inList:true|false }
                b.classList.toggle('btn-outline-success', !j.inList);
                b.classList.toggle('btn-success', j.inList);
                b.textContent = j.inList ? 'Dans ma liste ‚úì' : 'Ajouter √† ma liste';
            } catch (err) { console.error(err); }
        });
    </script>
{% endblock %}
