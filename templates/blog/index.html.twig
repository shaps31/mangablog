{% extends 'base.html.twig' %}
{% block title %}Blog{% endblock %}

{% block body %}
    <div class="bg-white p-3 border rounded mb-3">
        <form method="get" action="{{ path('blog_index') }}" class="row g-2 align-items-center">
            <div class="col-md-6">
                <input type="search" name="q" value="{{ q }}" class="form-control" placeholder="Rechercher un article...">
            </div>
            <div class="col-md-4">
                <select name="category" class="form-select">
                    <option value="">Toutes catégories</option>
                    {% for c in categories %}
                        <option value="{{ c.id }}" {{ catId == c.id ? 'selected' : '' }}>{{ c.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">Filtrer</button>
            </div>
        </form>
    </div>

    <div class="alert alert-secondary d-flex justify-content-between">
        <div>Ce mois-ci : <strong>{{ totalMonth }}</strong> article{{ totalMonth>1?'s':'' }} publié{{ totalMonth>1?'s':'' }}.</div>
        <div class="d-flex gap-2 flex-wrap">
            {% for row in totalsByCat %}
                <span class="badge text-bg-dark">{{ row.category ?? 'Sans catégorie' }} : {{ row.total }}</span>
            {% endfor %}
        </div>
    </div>

    <div class="row row-cols-1 g-3">
        {% for post in posts %}
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="h5 card-title mb-1">
                            <a href="{{ path('blog_show', { slug: post.slug }) }}">{{ post.title }}</a>
                        </h2>
                        <div class="text-muted small mb-2">
                            {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '—' }} • {{ post.category.name }}
                        </div>
                        <p class="card-text mb-2">{{ post.content|u.truncate(180, '…') }}</p>

                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('blog_show', { slug: post.slug }) }}">Lire</a>
                    </div>
                </div>
            </div>
            {% if pages > 1 %}
                <p class="text-muted small mb-2">Page {{ page }} / {{ pages }}</p>
            {% endif %}

            {% if pages > 1 %}
                <nav class="mt-3">
                    <ul class="pagination">
                        {# bouton Précédent #}
                        <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                            <a class="page-link"
                               href="{{ path('blog_index', { q: q, category: catId, page: page - 1 }) }}">«</a>
                        </li>

                        {# boutons numérotés #}
                        {% for p in 1..pages %}
                            <li class="page-item {{ p == page ? 'active' : '' }}">
                                <a class="page-link"
                                   href="{{ path('blog_index', { q: q, category: catId, page: p }) }}">{{ p }}</a>
                            </li>
                        {% endfor %}

                        {# bouton Suivant #}
                        <li class="page-item {{ page == pages ? 'disabled' : '' }}">
                            <a class="page-link"
                               href="{{ path('blog_index', { q: q, category: catId, page: page + 1 }) }}">»</a>
                        </li>
                    </ul>
                </nav>
            {% endif %}

        {% endfor %}
    </div>
{% endblock %}
