{% extends 'base.html.twig' %}
{% block title %}Blog{% endblock %}

{% block body %}
    <div class="bg-white p-3 border rounded mb-3">
        {# Formulaire GET : recherche + filtres #}
        <form method="get" class="row g-2 mb-3">
            <div class="col">
                <input class="form-control"
                       type="text"
                       name="q"
                       placeholder="Rechercher un article‚Ä¶"
                       value="{{ q|default('') }}">
            </div>

            {# Indicateur et bouton reset si filtres actifs #}
            {% set hasFilters = (q|default('')|length > 0) or (catId|default(0) != 0) or (tag|default(0) != 0) %}
            <div class="d-flex align-items-center justify-content-between mb-2">
                <p class="small text-muted m-0">
                    {{ totalResults|default(0) }} r√©sultat{{ totalResults|default(0) > 1 ? 's' : '' }}
                    {% if q %} pour ¬´ {{ q }} ¬ª{% endif %}
                </p>
                {% if hasFilters %}
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('blog_index') }}">
                        R√©initialiser
                    </a>
                {% endif %}
            </div>

            <div class="col-3">
                <select class="form-select" name="category">
                    <option value="0">Toutes cat√©gories</option>
                    {% for c in categories %}
                        <option value="{{ c.id }}" {{ (catId|default(0) == c.id) ? 'selected' }}>
                            {{ c.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-3">
                <select class="form-select" name="tag">
                    <option value="0">Tous les tags</option>
                    {% for t in allTags %}
                        <option value="{{ t.id }}" {{ (tag|default(0) == t.id) ? 'selected' }}>
                            {{ t.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-auto">
                <button class="btn btn-primary">Filtrer</button>
            </div>
        </form>

        {# ‚úÖ Compteur juste sous le formulaire #}
        <p class="text-muted small mb-2">
            {{ posts|length }} article(s) affich√©(s) ‚Äî page {{ page }}/{{ pages }}
        </p>
    </div>

    {# Bandeau de stats du mois #}
    <div class="alert alert-secondary d-flex justify-content-between">
        <div>
            Ce mois-ci :
            <strong>{{ totalMonth }}</strong>
            article{{ totalMonth>1?'s':'' }} publi√©{{ totalMonth>1?'s':'' }}.
        </div>

        <div class="d-flex gap-2 flex-wrap">
            {% for row in totalsByCat %}
                <span class="badge text-bg-dark">
                    {{ row.category ?? 'Sans cat√©gorie' }} : {{ row.total }}
                </span>
            {% endfor %}

            {% if tag|default(0) %}
                <span class="badge text-bg-secondary ms-2">
                    tag : {{ (allTags|filter(t => t.id == tag)|first).name }}
                </span>
            {% endif %}
        </div>
    </div>

    {# Liste des articles #}
    <div class="row row-cols-1 g-3">
        {% for post in posts %}
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h2 class="h5 card-title mb-1">
                            <a href="{{ path('blog_show', { slug: post.slug }) }}">{{ post.title }}</a>
                        </h2>

                        {# 1) ‚è± Estimation simple: ~200 mots/minute #}
                        {% set words = post.content|striptags|replace({'&nbsp;':' '})|split(' ')|length %}
                        {% set minutes = (words / 200)|round(0, 'ceil') %}
                        <span class="text-muted small d-inline-block mb-2">‚è± {{ minutes }} min de lecture</span>

                        {# ‚úÖ Cover avec fallback, alt descriptif, lazy #}
                        {% set coverUrl = post.cover ?: asset('img/cover-placeholder.png') %}
                        <img src="{{ coverUrl }}"
                             class="img-thumbnail me-3"
                             style="max-height:120px"
                             alt="Couverture : {{ post.title }}"
                             loading="lazy">

                        <div class="text-muted small mb-2">
                            {{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i') : '‚Äî' }} ‚Ä¢ {{ post.category.name }}
                        </div>

                        {# üîó Tags cliquables : filtrent par tag et reviennent en page 1 #}
                        {% if post.tags|length %}
                            <div class="mt-1">
                                {% set activeTagId = tag|default(null) %}
                                {% for t in post.tags %}
                                    <a class="badge text-decoration-none me-1 {{ t.id == activeTagId ? 'bg-primary' : 'bg-secondary' }}"
                                       href="{{ path('blog_index', app.request.query.all|merge({'tag': t.id, 'page': 1})) }}">
                                        {{ t.name }}
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if app.request.get('tag') %}
                            <a class="btn btn-sm btn-outline-secondary ms-1"
                               href="{{ path('blog_index', app.request.query.all|merge({'tag': null, 'page': 1})) }}">
                                R√©initialiser les tags
                            </a>
                        {% endif %}

                        {# 2) Extrait propre (HTML nettoy√©) #}
                        <p class="mb-2">
                            {{ post.content|striptags|u.truncate(220, '‚Ä¶') }}
                        </p>

                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('blog_show', { slug: post.slug }) }}">Lire</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# ‚úÖ Pagination (accessible) sous la liste #}
    {% if pages > 1 %}
        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination">

                {# Pr√©c√©dent #}
                {% if page > 1 %}
                    <li class="page-item">
                        <a class="page-link" rel="prev"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page-1})) }}">
                            Pr√©c√©dent
                        </a>
                    </li>
                {% endif %}

                {# Pages #}
                {% for p in 1..pages %}
                    <li class="page-item {{ p == page ? 'active' }}">
                        <a class="page-link"
                           {% if p == page %}aria-current="page"{% endif %}
                           href="{{ path('blog_index', app.request.query.all|merge({'page': p})) }}">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {# Suivant #}
                {% if page < pages %}
                    <li class="page-item">
                        <a class="page-link" rel="next"
                           href="{{ path('blog_index', app.request.query.all|merge({'page': page+1})) }}">
                            Suivant
                        </a>
                    </li>
                {% endif %}

            </ul>
        </nav>
    {% endif %}
{% endblock %}
