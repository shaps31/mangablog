{# comment/_moderate_buttons.html.twig #}
{% set st = comment.status|default('pending') %}

{% if st == 'approved' %}
    <form method="post" class="d-inline"
          action="{{ path('app_comment_reject', {id: comment.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ comment.id) }}">
        <span class="badge text-bg-success me-2">approuvé</span>
        <button class="btn btn-sm btn-outline-secondary">Annuler</button>
    </form>
{% elseif st == 'rejected' %}
    <span class="badge text-bg-danger me-2">rejeté</span>
    <form method="post" class="d-inline"
          action="{{ path('app_comment_approve', {id: comment.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
        <button class="btn btn-sm btn-success">Approuver</button>
    </form>
{% else %}
    <form method="post" class="d-inline"
          action="{{ path('app_comment_approve', {id: comment.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ comment.id) }}">
        <button class="btn btn-sm btn-success">Approuver</button>
    </form>
{% endif %}
