{# templates/comment/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 m-0">Commentaires</h1>
        <a href="{{ path('app_comment_new') }}" class="btn btn-primary btn-sm">Nouveau commentaire</a>
    </div>

    <div class="table-responsive bg-white border rounded">
        <table class="table align-middle m-0">
            <thead class="table-light">
            <tr>
                <th class="text-nowrap">ID</th>
                <th>Article</th>
                <th>Auteur</th>
                <th>Extrait</th>
                <th class="text-nowrap">Créé le</th>
                <th>Statut</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                {% set st = comment.status|default('pending') %}
                <tr>
                    <td>{{ comment.id }}</td>

                    <td class="text-truncate" style="max-width:260px;">
                        {% if comment.post is defined and comment.post %}
                            <a href="{{ path('blog_show', { slug: comment.post.slug }) }}" class="text-decoration-none">
                                {{ comment.post.title }}
                            </a>
                        {% else %}
                            <span class="text-muted">—</span>
                        {% endif %}
                    </td>

                    <td class="text-nowrap">
                        {{ comment.author is defined and comment.author ? comment.author.userIdentifier : '—' }}
                    </td>

                    <td class="text-truncate" style="max-width:360px;">
                        {% set raw = comment.content|default('')|striptags %}
                        {{ raw|slice(0,120) }}{% if raw|length > 120 %}…{% endif %}
                    </td>

                    <td class="text-nowrap">
                        {{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i') : '—' }}
                    </td>

                    <td>
                        {% if st == 'approved' %}
                            <span class="badge text-bg-success">approuvé</span>
                        {% elseif st == 'rejected' %}
                            <span class="badge text-bg-danger">rejeté</span>
                        {% else %}
                            <span class="badge text-bg-warning text-dark">en attente</span>
                        {% endif %}
                    </td>

                    {# ✅ Actions #}
                    <td class="text-end">
                        <div class="text-nowrap">
                            {# Voir/Éditer #}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_comment_show', {id: comment.id}) }}">Voir</a>
                            <a class="btn btn-sm btn-primary" href="{{ path('app_comment_edit', {id: comment.id}) }}">Éditer</a>

                            {# Toggle (approuver / annuler) — retourne sur la page courante #}
                            <a class="btn btn-sm {{ st == 'approved' ? 'btn-outline-secondary' : 'btn-success' }}"
                               href="{{ path('app_comment_toggle', {id: comment.id, back: app.request.uri}) }}">
                                {{ st == 'approved' ? "Annuler l'approbation" : 'Approuver' }}
                            </a>

                            {# Supprimer — CSRF #}
                            <form method="post" class="d-inline"
                                  action="{{ path('app_comment_delete', {id: comment.id}) }}"
                                  onsubmit="return confirm('Supprimer ce commentaire ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">Aucun commentaire trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
