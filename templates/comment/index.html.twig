{% extends 'base.html.twig' %}
{% block title %}Commentaires{% endblock %}

{% block body %}
    <h1 class="h4 mb-3">Commentaires</h1>

    {# Valeurs par défaut robustes #}
    {% set comments = comments|default([]) %}
    {% set page     = page|default(1) %}
    {% set pages    = pages|default(1) %}

    {% if comments is empty %}
        <div class="alert alert-info">Aucun commentaire.</div>
    {% else %}
        <div class="table-responsive bg-white border rounded">
            <table class="table table-sm align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Extrait</th>
                    <th>Auteur</th>
                    <th>Article</th>
                    <th>Statut</th>
                    <th>Créé le</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for c in comments %}
                    {% set status = c.status|default('pending') %}
                    <tr>
                        <td class="text-muted">{{ c.id }}</td>
                        <td style="max-width: 420px;">
                            <div class="small" style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                                {{ c.content|replace({'\n':' '})|u.truncate(140, '…') }}
                            </div>
                        </td>
                        <td>
                            {% if c.author %}
                                {{ c.author.displayName ?? c.author.userIdentifier }}
                            {% else %}—{% endif %}
                        </td>
                        <td>
                            {% if c.post %}
                                <a class="text-decoration-none"
                                   href="{{ path('blog_show', { slug: c.post.slug }) }}">{{ c.post.title }}</a>
                            {% else %}—{% endif %}
                        </td>
                        <td>
                            {% if status == 'approved' %}
                                <span class="badge text-bg-success">approuvé</span>
                            {% elseif status == 'rejected' %}
                                <span class="badge text-bg-danger">rejeté</span>
                            {% else %}
                                <span class="badge text-bg-warning text-dark">en attente</span>
                            {% endif %}
                        </td>
                        <td class="text-muted small">{{ c.createdAt ? c.createdAt|date('Y-m-d H:i') : '—' }}</td>
                        <td class="text-end">
                            {{ include('comment/_moderate_buttons.html.twig', { comment: c }) }}
                            <a class="btn btn-sm btn-outline-secondary"
                               href="{{ path('app_comment_show', { id: c.id }) }}">Voir</a>
                            <a class="btn btn-sm btn-outline-secondary"
                               href="{{ path('app_comment_edit', { id: c.id }) }}">Éditer</a>
                            {{ include('comment/_delete_form.html.twig', { comment: c }) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# Pagination simple #}
        {% if pages > 1 %}
            <nav class="mt-3" aria-label="Pagination">
                <ul class="pagination">
                    {% if page > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_comment_index', app.request.query.all|merge({'page': page-1})) }}">Précédent</a>
                        </li>
                    {% endif %}

                    {% for p in 1..pages %}
                        <li class="page-item {{ p == page ? 'active' }}">
                            <a class="page-link" href="{{ path('app_comment_index', app.request.query.all|merge({'page': p})) }}">{{ p }}</a>
                        </li>
                    {% endfor %}

                    {% if page < pages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_comment_index', app.request.query.all|merge({'page': page+1})) }}">Suivant</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    {% endif %}
{% endblock %}
