{# templates/base.html.twig — Layout global Bootstrap (CDN) #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MangaBlog{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {# CSS Bootstrap via CDN pour aller vite #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block styles %}{% endblock %}
</head>
<body class="bg-light">
<nav class="navbar navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">MangaBlog</a>

        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-outline-light btn-sm" href="{{ path('blog_index') }}">Blog</a>
            {% if app.user %}
                <span class="navbar-text small me-2">Connecté en tant que {{ app.user.userIdentifier }}</span>
                <a class="btn btn-outline-light btn-sm" href="{{ path('app_logout') }}">Se déconnecter</a>
            {% else %}
                <a class="btn btn-outline-light btn-sm" href="{{ path('app_register') }}">Créer un compte</a>
                <a class="btn btn-light btn-sm" href="{{ path('app_login') }}">Se connecter</a>
            {% endif %}
        </div>
    </div>
</nav>



<main class="container py-4">
    {# Zone pour afficher les messages flash (succès/erreur) #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} mb-3">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {# Contenu spécifique à chaque page #}
    {% block body %}{% endblock %}
</main>

{# JS Bootstrap via CDN #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>
